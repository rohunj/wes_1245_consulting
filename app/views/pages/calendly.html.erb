<script>
  // Store UTM params from URL to localStorage
  (function() {
    var params = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'];
    var urlParams = new URLSearchParams(window.location.search);
    params.forEach(function(param) {
      var value = urlParams.get(param);
      if (value) {
        localStorage.setItem(param, value);
      }
    });
  })();
  
  // Helper to get UTM params for Pixel
  function getUTMs() {
    return {
      utm_source: localStorage.getItem('utm_source') || '',
      utm_medium: localStorage.getItem('utm_medium') || '',
      utm_campaign: localStorage.getItem('utm_campaign') || '',
      utm_term: localStorage.getItem('utm_term') || '',
      utm_content: localStorage.getItem('utm_content') || '',
      fbc: localStorage.getItem('fbc') || '',
      fbp: localStorage.getItem('fbp') || ''
    };
  }
  
  // Build Calendly URL with UTM parameters
  function buildCalendlyUrl() {
    var baseUrl = 'https://calendly.com/wes1245/cost-seg-chat';
    var utmParams = getUTMs();
    var queryParams = [];
    
    // Add UTM parameters to query string
    Object.keys(utmParams).forEach(function(key) {
      if (utmParams[key]) {
        queryParams.push(key + '=' + encodeURIComponent(utmParams[key]));
      }
    });
    
    // Append query string to base URL
    if (queryParams.length > 0) {
      return baseUrl + '?' + queryParams.join('&');
    }
    
    return baseUrl;
  }
  
  // Set Calendly widget URL immediately
  var calendlyWidget = document.getElementById('calendly-inline-widget');
  if (calendlyWidget) {
    calendlyWidget.setAttribute('data-url', buildCalendlyUrl());
  }
  
  // Initialize page tracking
  function initializeCalendlyPage() {
    // Check if this page has already been initialized
    if (window.calendlyInitialized) return;
    window.calendlyInitialized = true;
    //console.log('Calendly page initialized');
    
    // Trigger Facebook Pixel event
    var eventId = generateEventId('CalendlyVisited');
    fbq('trackCustom','CalendlyVisited', getUTMs(), {event_id: eventId});
    
    // Send CAPI event via AJAX with fbc and fbp
    var utms = getUTMs();
    fetch('/capi/calendly_visited', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      },
      body: JSON.stringify({
        utms: utms,
        fbc: utms.fbc,
        fbp: utms.fbp,
        event_id: eventId
      })
    }).catch(function(error) {
      //console.log('CAPI request failed:', error);
    });
  }
  
  // Initialize tracking when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeCalendlyPage);
  } else {
    initializeCalendlyPage();
  }
</script>

<script>
  // Load Calendly widget script after DOM is ready
  function loadCalendlyWidget() {
    if(window.calendlyWidgetLoaded) return;
    window.calendlyWidgetLoaded = true;
    //console.log('Calendly widget loaded');
    var script = document.createElement('script');
    script.src = 'https://assets.calendly.com/assets/external/widget.js';
    script.async = true;
    script.onload = function() {
      // Wait for Calendly to be ready
      var checkCalendlyReady = function() {
        if (typeof Calendly !== 'undefined') {
          if(window.calendlyWidgetInitialized) return;
          window.calendlyWidgetInitialized = true;
          //console.log('Calendly widget initialized');
          
          // Listen for Calendly ready event
          window.addEventListener('message', function(e) {
            if (e.data && e.data.event && e.data.event.indexOf('calendly') === 0) {
              // Calendly widget is ready, hide preloader
              hideCalendlyPreloader();
            }
          });
          
          // Fallback: hide preloader after 5 seconds if no event is received
          setTimeout(hideCalendlyPreloader, 5000);
        } else {
          // Check again in 100ms
          setTimeout(checkCalendlyReady, 100);
        }
      };
      checkCalendlyReady();
    };
    document.head.appendChild(script);
  }
  
  // Hide preloader when Calendly widget is ready
  function hideCalendlyPreloader() {
    var preloader = document.getElementById('calendly-preloader');
    var widget = document.getElementById('calendly-inline-widget');
    if (preloader && widget) {
      preloader.style.display = 'none';
      widget.style.display = 'block';
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadCalendlyWidget);
  } else {
    loadCalendlyWidget();
  }
</script>

<script>
  // Listen for Calendly events
  window.addEventListener("message", function(e) {
    if (e.data && e.data.event === "calendly.event_scheduled") {
      // Extract first_name, last_name and email from event payload
      const { first_name, last_name, email } = e.data.payload?.invitee || {};
      
      // Trigger Facebook Pixel event
      var eventId = generateEventId('CalendlyScheduled');
      fbq('trackCustom','CalendlyScheduled', getUTMs(), {event_id: eventId});
      
      // Send CAPI event via AJAX with fbc and fbp
      var utms = getUTMs();
      fetch('/capi/calendly_scheduled', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({
          utms: utms,
          fbc: utms.fbc,
          fbp: utms.fbp,
          event_id: eventId,
          first_name: first_name,
          last_name: last_name,
          email: email
        })
      }).catch(function(error) {
        //console.log('CAPI request failed:', error);
      });
    }
  });
</script>

