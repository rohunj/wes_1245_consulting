        <div class="mx-auto max-w-xl text-center">
          <h2 class="text-lg font-semibold leading-8 tracking-tight text-indigo-600">Schedule a Call</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Book a quick call to explore your tax savings with cost segregation</p>
        </div>
        <figure class="col-span-2 sm:block sm:rounded-2xl mt-5 sm:bg-white sm:shadow-lg sm:ring-1 sm:ring-gray-900/5 xl:col-start-2 xl:row-end-1">
          <div class="sm:p-12 text-xl font-semibold leading-8 tracking-tight text-gray-900">
            <div id="calendly-embed"></div>
          </div>
        </figure>
      </div>
    </div>
  </div>
</div>
<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>

<script>
  // Store UTM params from URL to localStorage
  (function() {
    var params = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'];
    var urlParams = new URLSearchParams(window.location.search);
    params.forEach(function(param) {
      var value = urlParams.get(param);
      if (value) {
        localStorage.setItem(param, value);
      }
    });
  })();
</script>
<script>
  // Helper to get UTM params for Pixel
  function getUTMs() {
    return {
      utm_source: localStorage.getItem('utm_source') || '',
      utm_medium: localStorage.getItem('utm_medium') || '',
      utm_campaign: localStorage.getItem('utm_campaign') || '',
      utm_term: localStorage.getItem('utm_term') || '',
      utm_content: localStorage.getItem('utm_content') || ''
    };
  }
</script>
<script>
  var intervalCL;
  var loaded = false;
  var initStart = () => {
    if(loaded){
      intervalCL && clearInterval(intervalCL);
    }else{
      if (!window.Calendly) return;
        loaded = true;
        // Pass UTM params via utm property (cleaner approach)
        var utms = {
          utm_source: localStorage.getItem('utm_source') || '',
          utm_medium: localStorage.getItem('utm_medium') || '',
          utm_campaign: localStorage.getItem('utm_campaign') || '',
          utm_term: localStorage.getItem('utm_term') || '',
          utm_content: localStorage.getItem('utm_content') || ''
        };
        Calendly.initInlineWidget({
          "url": 'https://calendly.com/wes1245/cost-seg-chat',
          "parentElement": document.getElementById('calendly-embed'),
          "prefill": {},
          "utm": utms
        });
        fbq('trackCustom','CalendlyVisited', getUTMs());
    }
  }
  var initCalendlyWidget = ()=> {
    intervalCL = setInterval(initStart, 500);
  }
  initCalendlyWidget();
</script>
<script>
  // Listen for Calendly events
  window.addEventListener("message", function(e) {
    if (e.data && e.data.event && e.data.event.indexOf("calendly.") === 0) {
      console.log('Calendly event',e.data.event);
      if (e.data.event === "calendly.event_scheduled") {
        fbq('trackCustom','CalendlyScheduled', getUTMs());
        // Send to backend for CAPI
        var utms = {};
        ['utm_source','utm_medium','utm_campaign','utm_term','utm_content'].forEach(function(param){
          utms[param] = localStorage.getItem(param) || '';
        });
        fetch('/track_calendly', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ utms: utms })
        });
      }
    }
  });
</script>

