<script src="https://embed.typeform.com/next/embed.js"></script>
<script>
  // Store UTM params from URL to localStorage
  (function() {
    var params = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'];
    var urlParams = new URLSearchParams(window.location.search);
    params.forEach(function(param) {
      var value = urlParams.get(param);
      if (value) {
        localStorage.setItem(param, value);
      }
    });
  })();
  // Populate hidden fields from localStorage
  document.addEventListener('DOMContentLoaded', function() {
    var params = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'];
    params.forEach(function(param) {
      var field = document.querySelector('input[name="' + param + '"]');
      if (field) {
        field.value = localStorage.getItem(param) || '';
      }
    });
  });
  // Helper to get UTM params for Pixel
  function getUTMs() {
    return {
      utm_source: localStorage.getItem('utm_source') || '',
      utm_medium: localStorage.getItem('utm_medium') || '',
      utm_campaign: localStorage.getItem('utm_campaign') || '',
      utm_term: localStorage.getItem('utm_term') || '',
      utm_content: localStorage.getItem('utm_content') || ''
    };
  }
  var intervalTF;
  var loaded = false;
  var initStart = () => {
    if(loaded){
      intervalTF && clearInterval(intervalTF);
    }else{
      if (!window.tf || !document.getElementById("typeform-embed")) return;
        loaded = true;
        window.tf.createWidget('kej5O6dB', {
          container: document.getElementById("typeform-embed"),
          opacity: 0,
          hidden: {
            utm_source: localStorage.getItem('utm_source') || '',
            utm_medium: localStorage.getItem('utm_medium') || '',
            utm_campaign: localStorage.getItem('utm_campaign') || '',
            utm_term: localStorage.getItem('utm_term') || '',
            utm_content: localStorage.getItem('utm_content') || ''
          },
          onReady: () => {
            console.log("Form ready!");
            fbq('trackCustom','FreeEstimateVisited', getUTMs());
          },
          onSubmit: () => {
            console.log("Form submitted!");
            fbq('trackCustom','FreeEstimateSubmitted', getUTMs());
          },
        });
    }
  }
  var initTypeformWidget = ()=> {
    intervalTF = setInterval(initStart, 500);
  }
  initTypeformWidget();
</script>


