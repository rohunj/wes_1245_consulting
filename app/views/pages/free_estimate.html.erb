      <%# Add hidden UTM fields for tracking %>
      <%= hidden_field_tag :utm_source %>
      <%= hidden_field_tag :utm_medium %>
      <%= hidden_field_tag :utm_campaign %>
      <%= hidden_field_tag :utm_term %>
