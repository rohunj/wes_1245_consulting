<script>
  // Store UTM params from URL to localStorage
  (function() {
    var params = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'];
    var urlParams = new URLSearchParams(window.location.search);
    params.forEach(function(param) {
      var value = urlParams.get(param);
      if (value) {
        localStorage.setItem(param, value);
      }
    });
  })();
  
  // Helper to get UTM params for Pixel
  function getUTMs() {
    return {
      utm_source: localStorage.getItem('utm_source') || '',
      utm_medium: localStorage.getItem('utm_medium') || '',
      utm_campaign: localStorage.getItem('utm_campaign') || '',
      utm_term: localStorage.getItem('utm_term') || '',
      utm_content: localStorage.getItem('utm_content') || '',
      fbc: localStorage.getItem('fbc') || '',
      fbp: localStorage.getItem('fbp') || ''
    };
  }
  
  // Build Typeform URL with UTM parameters
  function buildTypeformUrl() {
    var baseUrl = 'https://form.typeform.com/to/kej5O6dB';
    var utmParams = getUTMs();
    var queryParams = [];
    
    // Add UTM parameters to query string
    Object.keys(utmParams).forEach(function(key) {
      if (utmParams[key]) {
        queryParams.push(key + '=' + encodeURIComponent(utmParams[key]));
      }
    });
    
    // Append query string to base URL
    if (queryParams.length > 0) {
      return baseUrl + '?' + queryParams.join('&');
    }
    
    return baseUrl;
  }
  
  // Set iframe src and trigger Pixel event when page loads
  function initializeFreeEstimatePage() {
    // Check if this page has already been initialized
    if (window.freeEstimateInitialized) return;
    window.freeEstimateInitialized = true;
    
    var iframe = document.getElementById('typeform-iframe');
    if (iframe) {
      iframe.src = buildTypeformUrl();
      iframe.onload = function() {
        console.log("iframe content loaded!");
        hideTypeformPreloader();
      };
    }
    
    // Trigger Facebook Pixel event
    var eventId = generateEventId('FreeEstimateVisited');
    fbq('trackCustom','FreeEstimateVisited', getUTMs(), {event_id: eventId});
    
    // Send CAPI event via AJAX with fbc and fbp
    var utms = getUTMs();
    fetch('/capi/free_estimate_visited', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      },
      body: JSON.stringify({
        utms: utms,
        fbc: utms.fbc,
        fbp: utms.fbp,
        event_id: eventId
      })
    });
  }
  
  // Hide preloader when iframe loads
  function hideTypeformPreloader() {
    var preloader = document.getElementById('typeform-preloader');
    var iframe = document.getElementById('typeform-iframe');
    if (preloader && iframe) {
      preloader.style.display = 'none';
      iframe.style.display = 'block';
    }
  }
  
  // Use requestAnimationFrame to ensure DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      requestAnimationFrame(initializeFreeEstimatePage);
    });
  } else {
    requestAnimationFrame(initializeFreeEstimatePage);
  }
  
  // Listen for Typeform submission events
  window.addEventListener('message', function(e) {
    console.log('New message event received:', e.data);
    if (e.data && e.data.type === 'form-submit') {
      // Typeform was submitted, trigger Facebook Pixel event
      var eventId = e.data.responseId;
      fbq('trackCustom','FreeEstimateSubmitted', getUTMs(), {event_id: eventId});
      console.log('Typeform submitted... Facebook Pixel event sent:', eventId);
    }
  });
</script>

